<header class='top-page-header'>
  <div class='search-bar-contents'>
    <div>
      <%= link_to image_tag("bookput.png", class:"bookput-icon"), "/" %>
    </div>
    <%#= link_to image_tag("big_library.png", class:"book-put-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードを入力してください'>
      <button class="search-button">
        <%= image_tag "book-search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "/", class: "category-list" %></li>
