<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <div>
      <%= link_to image_tag("bookput-logo.png", class:"bookput-icon"), "/" %>
    </div>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードを入力してください'>
      <%= link_to(root_path, class:"search-button", id:"orange-btn") do %>
        <%= image_tag "book-search.png", width:"20", height:"20", class:"search-icon" %>
      <% end %>
    </form>
    <ul class='layout-change'>
      <% if user_signed_in? %>
        <li class="login-condition">ログインしています</li>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
      <% else %>
        <li>
          はじめての方はこちら
          <%= link_to(new_user_session_path, class:'sign-in-btn', id:"orange-btn") do %>
            <span class="sign-in-btn-text">ログイン</span>
          <% end %>
        </li>
        <li>
          <%= link_to(new_user_registration_path, class:'sign-up-btn', id:"blue-btn") do %>
            <span class="sign-up-btn-text">新規登録</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='nav'>
    <ul class='search-lists'>
      <li><%= link_to 'タイトル', "/", class: "title-list", id:"list" %></li>
      <li><%= link_to 'カテゴリー', "/", class: "category-list", id:"list" %></li>
      <li><%= link_to 'ジャンル', "/", class: "genre-list", id:"list" %></li>
      <li><%= link_to 'キャッチコピー', "/", class: "catch-copy-list", id:"list" %></li>
      <li><%= link_to 'お気に入り', "/", class: "favorite-list", id:"list" %></li>
    </ul>
  </div>
</header>