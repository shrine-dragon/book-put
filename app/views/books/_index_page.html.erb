<ul class='book-lists', id='pagenate'>
  <% if @books.present? %>
    <% @books.each do |book| %>
      <li class='list'>
        <%= link_to root_path do %>
          <div class='book-info'>
            <div class='book-img-content'>
              <%= image_tag book.image, class: "book-img" %>
            </div>
            <h1 class='book-title'>
              <%= book.title %>
            </h1>
            <h1 class='book-posted-user'>
              <%= book.user.nickname %>
            </h1>
            <h1 class='book-posted-time'>
              <%= time_ago_in_words(book.created_at) %>前
            </h1>
          </div>
        <% end %>
      </li>
    <% end %>
  <% else %>
    <div class='no-post'>
      <%= image_tag "apology-man.png", class: "no-post-image" %>
      <p class='no-post-sentence'>投稿はありません</p>
    </div>
  <% end %>
  <%= paginate @books, remote: true %>
</ul>

<style>
  .book-posted-user-image {
    margin: 18px 9px 0 0;
  }
</style>