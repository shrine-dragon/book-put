<%# ①好評価が行われた場合に処理を実行する %>
if(document.getElementById('book_<%= @book.id %>').innerHTML = '<%= j(render 'like' , book: @book) %>') {

  <%# ②flashメッセージ(p要素)を生成する %>
  const flashMessage = document.createElement('p');
  flashMessage.setAttribute('class', 'flash-add')
  flashMessage.setAttribute('id', 'flash-message')
  flashMessage.innerHTML = "好評価した投稿に追加しました！"

  <%# ③flashメッセージの挿入先を取得(body) %>
  const body = document.querySelector("body");
  body.prepend(flashMessage)

  <%# ④flashメッセージを2秒後に消去する %>
  window.setTimeout( () => {
    flashMessage.remove();
  }, 2000);
}